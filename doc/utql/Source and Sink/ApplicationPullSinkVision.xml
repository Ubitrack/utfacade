<?xml version="1.0" encoding="UTF-8"?>

<UTQLPatternTemplates xmlns='http://ar.in.tum.de/ubitrack/utql'
                      xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
                      xmlns:xi='http://www.w3.org/2001/XInclude'
                      xmlns:h="http://www.w3.org/1999/xhtml"
                      xsi:schemaLocation='http://ar.in.tum.de/ubitrack/utql ../../../schema/utql_templates.xsd'>
    
    <Pattern name="ApplicationPullSinkVisionImage" displayName="Application Pull Sink (Image)">
    	<Description><h:p>This is a sink component which may be used to interface the dataflow network 
    	to an user application. This sink uses a pull input port and also exhibits a pull interface to 
    	the application.
    	An application can call the <h:code>get( t )</h:code> method to pull events from the data flow
    	network. For more details, see the Doxygen documentation.
    	</h:p></Description>
    	
        <Input>
            <Node name="A" displayName="A"/>
            <Node name="B" displayName="B"/>
            <Edge name="Input" source="A" destination="B" displayName="Input Image">
            	<Description><h:p>The input image</h:p></Description>
                <Predicate>type=='Image'&amp;&amp;mode=='pull'</Predicate>
            </Edge>
        </Input>
                
        <DataflowConfiguration>
            <UbitrackLib class="ApplicationPullSinkVisionImage"/>

            <Attribute name="metadataSensorGroup" default="default" displayName="Sensor Group" xsi:type="StringAttributeDeclarationType"/>
            <Attribute name="metadataSensorCategory" value="UNDEFINED" xsi:type="EnumAttributeReferenceType"/>
            <Attribute name="metadataSensorName" default="default" displayName="Sensor Name" xsi:type="StringAttributeDeclarationType"/>
            <Attribute name="metadataSensorInfo" default="" displayName="Sensor Info" xsi:type="StringAttributeDeclarationType"/>
            <Attribute name="metadataDebug" value="FALSE" xsi:type="EnumAttributeReferenceType"/>
            <Attribute name="metadataSynchronization" value="FREE" xsi:type="EnumAttributeReferenceType"/>
            <Attribute name="metadataUsage" value="STREAM" xsi:type="EnumAttributeReferenceType"/>

        </DataflowConfiguration>
    </Pattern>
        
    <!-- Attribute declarations -->
    
    <GlobalNodeAttributeDeclarations>
        <xi:include href="../../GlobalAttrSpec.xml" xpointer="element(/1/1/1)"/>
    </GlobalNodeAttributeDeclarations>
    
    <GlobalEdgeAttributeDeclarations>
        <xi:include href="../../GlobalAttrSpec.xml" xpointer="element(/1/2/1)"/>
        <xi:include href="../../GlobalAttrSpec.xml" xpointer="element(/1/2/2)"/>
        <xi:include href="../../GlobalAttrSpec.xml" xpointer="element(/1/2/3)"/>
    </GlobalEdgeAttributeDeclarations>
    
    <GlobalDataflowAttributeDeclarations>
        <xi:include href="../../GlobalAttrSpec.xml" xpointer="element(/1/3/1)"/>

        <Attribute name="metadataDebug" displayName="Is this sink for Debugging" default="FALSE" xsi:type="EnumAttributeDeclarationType">
            <Description>
                <h:p>
                    Define if this sink is intended for debugging.
                </h:p>
            </Description>

            <EnumValue name="TRUE" displayName="True"/>
            <EnumValue name="FALSE" displayName="False"/>
        </Attribute>

        <Attribute name="metadataSynchronization" displayName="Synchronization for this sink" default="FREE" xsi:type="EnumAttributeDeclarationType">
            <Description>
                <h:p>
                    Define how the data provided by this sink is intended to be synchronized.
                </h:p>
            </Description>

            <EnumValue name="FREE" displayName="Free"/>
            <EnumValue name="MASTER" displayName="Master"/>
            <EnumValue name="SLAVE" displayName="Slave"/>
        </Attribute>

        <Attribute name="metadataUsage" displayName="Usage intent for this sink" default="STREAM" xsi:type="EnumAttributeDeclarationType">
            <Description>
                <h:p>
                    Define how the data provided by this sink is intended to be used.
                </h:p>
            </Description>

            <EnumValue name="STREAM" displayName="Stream"/>
            <EnumValue name="CALIBRATION" displayName="Calibration"/>
            <EnumValue name="NOTIFICATION" displayName="Notification"/>
        </Attribute>

        <Attribute name="metadataSensorCategory" displayName="Sensor category for this sink" default="UNDEFINED" xsi:type="EnumAttributeDeclarationType">
            <Description>
                <h:p>
                    Define the sensor category for the data provided by this sink.
                </h:p>
            </Description>

            <EnumValue name="UNDEFINED" displayName="Undefined"/>
            <EnumValue name="TRACKER" displayName="Tracker"/>
            <EnumValue name="CAMERA" displayName="Camera"/>
        </Attribute>

    </GlobalDataflowAttributeDeclarations>
 
    
</UTQLPatternTemplates>
